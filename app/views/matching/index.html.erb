<div class="matchingPage">
  <header class="header">
    <i class="fas fa-comments fa-3x"></i>
    <div class="header_logo"><%= link_to image_tag("techpit-march-icon.png"), users_path %></div>
  </header>
  <div class="container">
    <div class="mt-5">
      <% if current_user.corporation == "個人" %>
      <div class="matchingNum"><%= @match_users.size %>社とマッチングしています</div>
      <h2 class="pageTitle">マッチングした企業一覧</h2>
      <% elsif current_user.corporation == "法人" %>
      <div class="matchingNum"><%= @match_users.size %>人とマッチングしています</div>
      <h2 class="pageTitle">マッチングしたエンジニア一覧</h2>
      <% end %>
      <div class="matchingList">
        <% @match_users.each do |user| %>
          <div class="matchingPerson">
          <div class="matchingPerson_img"><%= image_tag user.img_name.url(:thumb) %></div>
            <div class="matchingPerson_name"><%= user.name %></div>
          </div>
        <% end %>
      </div>
    <div>
  </div>
</div>
